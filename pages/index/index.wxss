/* pages/index/index.wxss */
@import '../../static/styles/icon.wxss';
@import '../../static/styles/main.wxss';

.content {
  padding: 4em 1em 1em;
}

.header {
  position: relative;
}

.headImg {
  width: 100%;
  height: 5em;
}

.headContent {
  position: absolute;
  display: flex;
  left: 0;
  top: 0;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.headContent .logoName {
  margin-bottom: 1.5em;
  width: 40%;
  height: auto;
}

.headContent .business {
  padding: 1em;
  width: 8em;
  background-color: #419fff;
  color: #fff;
  line-height: 1em;
  text-align: center;
  border-radius: 100rpx;
}

.section {
  margin: 1em 0;
}

.section .h1 {
  font-size: 32rpx;
  color: #333;
}

.section .list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.section .navigateToBtn {
  min-width: 200rpx;
  text-align: center;
  background: #d3e9ff;
  margin: 20rpx 0;
  padding: 1em 2em;
  border-radius: 100rpx;
  color: #333;
  font-size: 28rpx;
}

.footer {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
}

.footer .comp {
  color: #419fff;
  font-size: 28rpx;
  line-height: 2em;
}

.footer .ver {
  font-size: 24rpx;
  color: #333;
}