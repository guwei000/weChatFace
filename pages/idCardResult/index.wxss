@import '../../static/styles/main.wxss';

button {
  border-radius: 0;
}

.form {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  min-height: 100vh;
  font-size: 32rpx;
}

.border {
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1px solid #ececec
}

.border image {
  width: 100%
}

.mt-10 {
  margin-top: 10rpx
}

.mt-20 {
  margin-top: 20rpx
}

.content {
  align-items: center;
  margin: 1em;
  padding: 1em;
  min-height: calc(100vh - 2em);
  box-shadow: 0px 0px 19px 1px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.form .content label {
  margin: 0 0 0.5em;
  align-items: center;
}

.form .content label .title {
  color: #333;
  font-size: 28rpx;
}

.form .content label input {
  width: calc(100% - 6rem);
  margin: 0.5em 0 1em;
  padding: 0.5em;
  max-height: 3em;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.form .btn {
  display: flex;
}

.form .btn button {
  flex: 1;
  margin-top: 2em;
  padding: 1em;
  line-height: 1em;
  font-size: 32rpx;
  border-radius: 50rpx;
}

.border-right {
  overflow: hidden;
  border: none;
  border-radius: 8rpx;
}

.text-wrap {
  padding: 20rpx
}
